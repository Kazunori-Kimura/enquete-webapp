<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>enquete</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>

    <div style="margin: 60px">
      <div class="page-header">
        <h1><%= title %></h1>
      </div>

      <div data-bind="template: { name: 'tmplEnquete', foreach: enquetes }"></div>

    </div>

<script id="tmplEnquete">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"
        data-bind="text: title">
      </h3>
    </div>
    <div class="panel-body">
      <form class="form-horizontal">
        <div class="form-group">
          <label class="col-sm-2 control-label"
            data-bind="attr: { for: 'enquete_title_' + id }">
            Title
          </label>
          <div class="col-sm-8">
            <input type="text" class="form-control"
              data-bind="attr: { id: 'enquete_title_' + id }, textInput: title">
          </div>
          <div class="col-sm-2">
            <button class="btn btn-danger">
              <span class="glyphicon glyphicon-remove-sign"></span>
              Delete
            </button>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label"
            data-bind="attr: { for: 'enquete_description_' + id }">
            Description
          </label>
          <div class="col-sm-10">
            <textarea class="form-control" row="3"
              data-bind="attr: { id: 'enquete_description_' + id }, textInput: description">
            </textarea>
          </div>
        </div>
      </form>

      <div data-bind="template: { name: 'tmplQuestion', foreach: questions }"></div>

    </div>
    <div class="panel-footer">
      <button class="btn btn-primary">
        <span class="glyphicon glyphicon-plus-sign"></span>
        add question
      </button>
    </div>
  </div>
</script>

<script id="tmplQuestion" type="text/html">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h4 class="panel-title"
        data-bind="text: text">
      </h4>
    </div>
    <div class="panel-body">

      <form class="form-horizontal">
        <div class="form-group">
          <label class="col-sm-2 control-label"
            data-bind="attr: { for: 'question_text_' + id }">
            Text
          </label>
          <div class="col-sm-10">
            <input type="text" class="form-control"
              data-bind="attr: { id: 'question_text_' + id }, textInput: text">
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label"
            data-bind="attr: { for: 'question_type_' + id }">
            Type
          </label>
          <div class="col-sm-10">
            <select
              class="form-control"
              data-bind="attr: { id: 'question_text_' + id }, options: $root.enumQuestionType, value: type">
            </select>
          </div>
        </div>
      </form>

    </div>

    <!-- items -->
    <ul class="list-group"
      data-bind="template: { name: 'tmplItem', foreach: items }">
    </ul>

    <div class="panel-footer">
      <button class="btn btn-xs btn-primary">
        <span class="glyphicon glyphicon-plus-sign"></span>
        add item
      </button>
    </div>
  </div>
</script>

<script id="tmplItem" type="text/html">
  <li class="list-group-item">
    <form class="form-inline">
      <div class="form-group">
        <input type="text" data-bind="textInput: text">
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox" data-bind="checked: isOther">
          <span>その他</span>
        </label>
      </div>
      <button class="btn btn-xs btn-danger">
        <span class="glyphicon glyphicon-remove-sign"></span>
      </button>
    </form>
  </li>
</script>

    <!-- Knockout.js -->
    <script src="http://ajax.aspnetcdn.com/ajax/knockout/knockout-3.1.0.js"></script>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="js/app.js"></script>
  </body>
</html>